
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own user profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    // A chairperson can create a room if the chairpersonId matches their UID.
    // A chairperson can read or list rooms if they are the owner.
    // Students can be handled later.
    match /rooms/{roomId} {
       allow create: if request.auth != null && request.resource.data.chairpersonId == request.auth.uid;
       allow get, update: if request.auth != null && get(/databases/$(database)/documents/rooms/$(roomId)).data.chairpersonId == request.auth.uid;
       allow list: if request.auth != null && request.query.where.size == 1 && request.query.where[0].fieldPath == 'chairpersonId' && request.query.where[0].string_value == request.auth.uid;
    }

     // Students can join a room if they are logged in.
    match /roomMembers/{memberId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
