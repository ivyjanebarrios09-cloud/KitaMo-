{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["chairperson", "student"],
          "description": "The user's role in the application."
        }
      },
      "required": ["uid", "name", "email", "role"]
    },
    "room": {
      "title": "Room",
      "description": "A financial room for a group.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the room."
        },
        "description": {
          "type": "string",
          "description": "A description of the room."
        },
        "code": {
          "type": "string",
          "description": "A unique code to join the room."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the room was created."
        }
      },
      "required": ["name", "code", "createdAt"]
    },
    "joinedRoom": {
        "title": "Joined Room",
        "description": "A reference to a room that a student has joined.",
        "type": "object",
        "properties": {
            "roomId": { "type": "string", "description": "The ID of the joined room." },
            "chairpersonId": { "type": "string", "description": "The UID of the chairperson who owns the room." },
            "roomName": { "type": "string", "description": "The name of the joined room." },
            "roomDescription": { "type": "string", "description": "The description of the joined room." },
            "joinedAt": { "type": "string", "format": "date-time", "description": "The date and time the student joined the room." }
        },
        "required": ["roomId", "chairpersonId", "roomName", "joinedAt"]
    },
    "roomMember": {
      "title": "Room Member",
      "description": "A user who is a member of a room.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user."
        },
        "role": {
          "type": "string",
          "enum": ["chairperson", "student"],
          "description": "The user's role in the room."
        },
        "joinedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the user joined the room."
        }
      },
      "required": ["userId", "role", "joinedAt"]
    },
    "expense": {
      "title": "Expense",
      "description": "An expense record for a room.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the expense."
        },
        "description": {
          "type": "string",
          "description": "A description of the expense."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the expense."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the expense."
        },
        "createdBy": {
          "type": "string",
          "description": "The UID of the user who created the expense."
        }
      },
      "required": ["title", "amount", "date", "createdBy"]
    },
    "deadline": {
      "title": "Deadline",
      "description": "A fund deadline for a room.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the deadline."
        },
        "amountPerStudent": {
          "type": "number",
          "description": "The amount due per student."
        },
        "dueDate": {
          "type": "string",
          "format": "date",
          "description": "The due date for the deadline."
        },
        "category": {
          "type": "string",
          "description": "The category for the deadline."
        }
      },
      "required": ["title", "amountPerStudent", "dueDate", "category"]
    },
    "payment": {
      "title": "Payment",
      "description": "A payment record from a user for a room.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user making the payment."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the payment."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the payment."
        },
        "note": {
          "type": "string",
          "description": "An optional note for the payment."
        }
      },
      "required": ["userId", "amount", "date"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/room"
      },
      "description": "Stores information about financial rooms owned by a user."
    },
     "/users/{userId}/joinedRooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/joinedRoom"
      },
      "description": "Stores references to rooms a student has joined."
    },
    "/users/{userId}/rooms/{roomId}/members/{memberId}": {
      "schema": {
        "$ref": "#/entities/roomMember"
      },
      "description": "Stores the members of a specific room."
    },
    "/users/{userId}/rooms/{roomId}/expenses/{expenseId}": {
      "schema": {
        "$ref": "#/entities/expense"
      },
      "description": "Stores expense records for a specific room."
    },
    "/users/{userId}/rooms/{roomId}/deadlines/{deadlineId}": {
      "schema": {
        "$ref": "#/entities/deadline"
      },
      "description": "Stores fund deadline information for a specific room."
    },
    "/users/{userId}/rooms/{roomId}/payments/{paymentId}": {
      "schema": {
        "$ref": "#/entities/payment"
      },
      "description": "Stores payment records from users for a specific room."
    }
  }
}
